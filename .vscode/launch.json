    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch - Dev",
            "program": "${workspaceRoot}/bin/www",
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch - Prod",
            "program": "${workspaceRoot}/bin/www",
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "production"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}
